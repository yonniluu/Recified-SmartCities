<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f4f8ff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:background="#f4f8ff">
        tools:context="com.example.hanta.telus_datathon.RecreationCentre">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/Title"
            android:background="@drawable/login"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#7cbde9"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hours"
            android:id="@+id/Hours"
            android:background="@drawable/middle_box"
            android:layout_below="@+id/Hour_Title"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#7cbde9"
            android:fontFamily="serif"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:background="@drawable/middle_box"
            android:id="@+id/Location"
            android:layout_below="@+id/Location_Title"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#7cbde9"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone"
            android:id="@+id/Phone"
            android:background="@drawable/password"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="#7cbde9"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Check In"
            android:id="@+id/Check_In_Button"
            android:background="@drawable/button_style"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:onClick="checkIn"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/spinner1"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sport_arrays"
            android:prompt="@string/sport_prompt"
            android:background="@drawable/dropdown"
            android:textColor="#ffffff"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/Phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hours:"
            android:background="@drawable/middle_box"
            android:id="@+id/Hour_Title"
            android:gravity="center"
            android:layout_below="@+id/Title"
            android:layout_centerHorizontal="true"
            android:textColor="#7cbde9"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone:"
            android:id="@+id/textView"
            android:background="@drawable/middle_box"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_below="@+id/Location"
            android:layout_alignLeft="@+id/Location"
            android:layout_alignStart="@+id/Location"
            android:textStyle="normal|bold"
            android:textColor="#7cbde9"
            android:fontFamily="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location:"
            android:id="@+id/Location_Title"
            android:background="@drawable/middle_box"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/Hours"
            android:layout_alignLeft="@+id/Hours"
            android:layout_alignStart="@+id/Hours"
            android:fontFamily="serif"
            android:textColor="#7cbde9"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</ScrollView>