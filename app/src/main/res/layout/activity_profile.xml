<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#f4f8ff">
tools:context="com.example.thedata_minors.recified.login.Activity.MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginTop="329dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">

</LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="1000px"
        android:background="#7cbde9"
        android:layout_width="3000px" />

    <Button
        android:text="Go Back"
        android:id="@+id/button3"
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="13dp"

        android:textStyle="normal|bold"
        android:onClick="goBack"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/user_pic"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="serif"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="21dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Coins :               50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:gravity="center"
        android:id="@+id/textView4"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#7cbde9"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="John"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:layout_above="@+id/Friends"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
    android:background="@drawable/password"
    android:gravity="center"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#7cbde9"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:text="Rec-Money:         10" />

    <TextView
        android:text="Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Friends"
        android:textColor="#ffffff"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/textView6"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/barcode"
        android:id="@+id/imageView5"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="350px" />

    <Button
        android:text="Scan Card"
        android:id="@+id/button4"
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:gravity="center"

        android:textStyle="normal|bold"
        android:onClick="goBack"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="17dp" />

</RelativeLayout>
