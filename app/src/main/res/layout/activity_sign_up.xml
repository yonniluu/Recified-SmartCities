<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#f4f8ff"
    tools:context="com.example.thedata_minors.recified.login.Activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="329dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_register"
        android:id="@+id/signUp"
        android:onClick="SignUp"
        android:background="@drawable/button_style"
        android:textAlignment="center"
        android:gravity="center_vertical"

        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Password"
        android:layout_alignStart="@+id/Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:id="@+id/firstname"
        android:text="First Name"
        android:hint="@string/signIn_email"
        android:paddingLeft="10dp"
        android:fontFamily="serif"
        android:textColor="#4d91bf"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_box"
        android:id="@+id/lastname"
        android:text="LastName"
        android:hint="@string/signIn_email"
        android:paddingLeft="10dp"
        android:fontFamily="serif"
        android:textColor="#4d91bf"
        android:layout_below="@+id/firstname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/etEmail"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_box"
        android:text="Email"
        android:hint="@string/signIn_email"
        android:paddingLeft="10dp"
        android:fontFamily="serif"
        android:textColor="#4d91bf"
        android:layout_below="@+id/lastname"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname" />

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/etage"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_box"
        android:text="Age"
        android:hint="@string/signIn_email"
        android:paddingLeft="10dp"
        android:fontFamily="serif"
        android:textColor="#4d91bf"
        android:layout_below="@+id/lastname"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname" />

    <EditText
        android:layout_height="wrap_content"
        android:background="@drawable/password"
        android:id="@+id/Password"
        android:hint="@string/signIn_password"
        android:inputType="textPassword"
        android:text="12345678"
        android:textColor="#4d91bf"
        android:fontFamily="serif"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/firstname"
        android:layout_alignStart="@+id/firstname" />



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/gender"
        android:layout_below="@+id/Password"
        android:layout_centerHorizontal="true"
        android:dropDownSelector="@drawable/dropdown_pressed"
        android:entries="@array/gender_array"
        android:background="@drawable/dropdown_style" />


</RelativeLayout>
